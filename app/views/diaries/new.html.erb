<%= form_with model: @diary, url: diaries_path, local: true do |f| %>
  <div class="field">
    <%= f.label :今日の画像 %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :今日の日付 %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :今日やったこと %>
    <%= f.text_field :text %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

